@page
@model IndexModel
@{
    ViewData["Title"] = "Payment Page";
}

<h2>Payment Form</h2>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <p><strong>@Model.Message</strong></p>
}

<form method="post">
    <label for="CustomerId">Customer ID:</label>
    <input type="text" id="CustomerId" asp-for="Payment.CustomerId" required />
    <br />
    
    <label for="Amount">Amount:</label>
    <input type="number" id="Amount" asp-for="Payment.Amount" required />
    <br />
    
    <button type="submit">Submit Payment</button>
</form>